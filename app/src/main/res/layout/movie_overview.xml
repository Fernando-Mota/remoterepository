<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/overviewPadding"
    android:background="@color/colcorOverviewBackground"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/overviewTitleAreaHeight">

        <ImageView
            android:id="@+id/imagem_topo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TextView
                android:id="@+id/movie_overview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/OverviewTitleFont"/>

        </RelativeLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imagem_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

            <TextView
                android:id="@+id/movie_overview"
                style="@style/OverviewBodyFont"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
    </FrameLayout>


</LinearLayout>